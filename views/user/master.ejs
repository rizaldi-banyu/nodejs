<%- include('../layouts/header') %>
<%- include('../layouts/navbar') %>

<div class="container">
    <a class="btn btn-primary float-right mt-5" href="/add_user">Add User</a>
        <% if (message) { %> 
            <div class="alert alert-success alert-dismissible fade show alert<%= message.type %> mt-5" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %> </strong>
            </div>
            
        <% } %> 

    <div class="mt-5">
        <% if (users != '') { %>
            <table id="user" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((row,index) => { %>
                        <tr>
                            <td><%= index+1 %> </td>
                            <td><%= row.name %> </td>
                            <td><%= row.email %> </td>
                            <td><%= row.phone %> </td>
                            <td>
                                <a href="/edit_user/<%= row._id %>"  class="text-success"><i class="fas fa-fw fa-edit"></i></a>
                                <a href="/delete_user/<%= row._id %>" class="text-danger"><i class="fas fa-fw fa-trash"></i></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %> 
            <h1>NO user in database</h1>
        <% } %> 
    
    </div>
</div>

<%- include('../layouts/footer') %>